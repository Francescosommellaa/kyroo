{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@web/*": ["./src/web/*"],
      "@server/*": ["./src/server/*"]
    }
  },
  "include": [
    "src/**/*",
    "netlify/functions/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".netlify"
  ]
}
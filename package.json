{
  "name": "kyroo",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "src/web",
    "src/server"
  ],
  "scripts": {
    "build": "npm -w src/web run build && npm -w src/server run build || true",
    "dev": "npm -w src/web run dev",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "test": "npm -ws run test"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  }
}